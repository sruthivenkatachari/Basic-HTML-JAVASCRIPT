<script>
$(document).ready(function(){
    $("#hide").click(function(){
        $("#eng").hide();
        $("#frc").show();
        $("#arb").hide();
    });
    $("#show").click(function(){
        $("#eng").show();
        $("#frc").hide();
        $("#arb").hide();
    });
    $("#sho").click(function(){
        $("#eng").hide();
        $("#frc").hide();
        $("#arb").show();
    });
});
var app = angular.module('myApp', []);
app.controller('personCtrl', function($scope) {
$scope.myVar = false;
   $scope.toggle = function() {
   
   
       $scope.myVar = true;
   };
   $scope.my = false;
   $scope.tog = function() {
   
   
       $scope.my = true;
   };
   });


function myFunction() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
        x.type = "text";
    } else {
        x.type = "password";
    }
}
function myfrench() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
        x.type = "text";
    } else {
        x.type = "password";
    }
}
   </script>
